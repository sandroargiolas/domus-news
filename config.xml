<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        id          = "it.sandroargiolas.domusnews"
        versionCode = "1.0" 
        version     = "1.0" >


    <name>PhoneGap Example</name>

    <description>
       	A simple app to search and read local news from a web site
    </description>

    <author href="https://www.sandroargiolas.it" email="sandroargiolas@tiscali.it">
	Sandro Argiolas
    </author>
	
</widget>
<gap:platform name="ios" />
<gap:platform name="android" />
<gap:platform name="winphone" />

<!-- general icon -->
<icon src="icon.png" />

<!-- iOS icons -->
<icon src="global/img/ios/icon.png" gap:platform="ios" width="57" height="57" />
<icon src="global/img/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
<icon src="global/img/ios/icon_at_2x.png" gap:platform="ios" width="114" height="114" />

<!-- android icons -->
<icon src="global/img/android/ldpi.png" gap:platform="android" gap:density="ldpi" />36
<icon src="global/img/android/mdpi.png" gap:platform="android" gap:density="mdpi" />48
<icon src="global/img/android/hdpi.png" gap:platform="android" gap:density="hdpi" />72
<icon src="global/img/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />96

<!-- winphone icons -->
<icon src="icons/winphone/icon.png" gap:platform="winphone" />
<icon src="icons/winphone/tileicon.png" gap:platform="winphone" gap:role="background" />
</xml>